{
  "name": "commitlint-config-cmyr",
  "version": "1.0.0",
  "description": "草梅友仁自定义的 commitlint 配置",
  "author": "CaoMeiYouRen",
  "private": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.mts"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "commit": "cz",
    "release": "semantic-release",
    "lint": "cross-env NODE_ENV=production eslint . --fix --ext .ts,.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsdown",
    "dev": "cross-env NODE_ENV=development tsdown --watch",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@types/debug": "^4.1.7",
    "@types/lodash": "^4.14.178",
    "@types/node": "^24.3.0",
    "commitizen": "^4.2.3",
    "cross-env": "^10.0.0",
    "cz-conventional-changelog-cmyr": "2.0.0",
    "debug": "^4.3.3",
    "eslint": "^9.34.0",
    "eslint-config-cmyr": "2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "lodash": "^4.17.21",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "semantic-release-cmyr-config": "1.0.0",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.2"
  },
  "changelog": {
    "language": "zh"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "git add"
    ]
  },
  "homepage": "https://github.com/CaoMeiYouRen/commitlint-config-cmyr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaoMeiYouRen/commitlint-config-cmyr.git"
  },
  "bugs": {
    "url": "https://github.com/CaoMeiYouRen/commitlint-config-cmyr/issues"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^20.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-cmyr"
    }
  }
}
